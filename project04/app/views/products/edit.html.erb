<%= link_to_function "Back", "history.back()" %>

<h2>Editing <%= @product.title%></h2>

<% form_for(@product) do |f| %>
  <%= f.error_messages %>
<div class="entry">

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
</div>

